    <!-- LED Toggles -->
    <div class="card">LED 1 <label class="toggle"><input type="checkbox" onchange="toggleLED(1,this)"><span class="slider"></span></label></div>
    <div class="card">LED 2 <label class="toggle"><input type="checkbox" onchange="toggleLED(2,this)"><span class="slider"></span></label></div>
