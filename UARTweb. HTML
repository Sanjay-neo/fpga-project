    <div class="card">LED 6 <label class="toggle"><input type="checkbox" onchange="toggleLED(6,this)"><span class="slider"></span></label></div>
    <div class="card">LED 7 <label class="toggle"><input type="checkbox" onchange="toggleLED(7,this)"><span class="slider"></span></label></div>
