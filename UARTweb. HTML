  <h2 style="margin-top:40px;">Sensors</h2>
  <div class="card">
    Sensor 1: <span id="s1">--</span>
  </div>
  <div class="card">
    Sensor 2: <span id="s2">--</span>
  </div>

  <script>
    const ESP_IP = "http://192.168.1.50";  // change to your ESP32 IP

    function toggleLED(num, el) {
      let state = el.checked ? "ON" : "OFF";
      fetch(`${ESP_IP}/led?num=${num}&state=${state}`)
        .then(r => console.log(`LED${num} ${state}`));
    }

    function updateSensors() {
      fetch(`${ESP_IP}/sensor?num=1`)
        .then(r => r.text())
        .then(t => document.getElementById("s1").innerText = t);

      fetch(`${ESP_IP}/sensor?num=2`)
        .then(r => r.text())
        .then(t => document.getElementById("s2").innerText = t);
    }

    setInterval(updateSensors, 2000); // refresh every 2 seconds
  </script>
